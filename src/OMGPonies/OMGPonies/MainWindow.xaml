<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="OMGPonies.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:my="clr-namespace:OMGPonies"
	Title="MainWindow"
	Height="350"
	Width="525"
	DataContext="{Binding Source={StaticResource Locator}, Path=[MainPageViewModel]}">
	<StackPanel>
		<TextBlock
			Text="{Binding Path=BannerText}"
			FontFamily="Verdana"
			FontSize="18"
			FontWeight="Bold"
			HorizontalAlignment="Center" />
		<Menu
			Height="20"
			Width="512" />
		<my:CustomerView />
	</StackPanel>
</Window>